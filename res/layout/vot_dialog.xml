<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66101010" >

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#90CAF9" >

        <ImageView
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_tag_faces_black_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/face"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/face"
            android:text="녹음 가이드"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/face"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="1. 또박 또박 읽어주세요"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Dtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="2. 적당한 크기의 목소리로 읽어주세요."
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Dtext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="3. 너무 느리지도, 빠르지도 않게 읽어주세요."
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Dtext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="4. 조용한 곳에서 읽어주세요."
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Dtext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="5. 녹음 후 목소리를 확인해주세요"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Dtext6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext5"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="아름다운 목소리를 나누기 위해 \n\n 가이드 내용을 확인해주세요 ^^"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dtext6"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="#42A5F5"
                android:text="다시 보지 않기"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <Button
                   android:id="@+id/dialog_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="#42A5F5"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>